<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    app:layout_constraintCircleRadius="40dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/plantRegisterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:text="@string/plantRegisterLabel"
        android:textAlignment="center"
        android:textColor="@color/darkBlueTextColor"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:layout_editor_absoluteX="6dp" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="334dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="@string/titleLabel"
        android:textAlignment="center"
        android:textColor="@color/brownTitleColor"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <LinearLayout
        android:id="@+id/registerPlantFormLayout"
        android:layout_width="339dp"
        android:layout_height="393dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/form_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/inputPlantText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="17dp"
            android:text="@string/inputPlantsLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plantsQuantityLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:expandedHintEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plantsQuantityInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inputPlantsLabel"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/individualCostText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="17dp"
            android:text="@string/individualCostLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/indivualCostLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:hint="@string/individualCostLabel"
            android:inputType="textPassword"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:expandedHintEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/individualCostInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/individualCostLabel"
                android:inputType="number|numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/monthText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="17dp"
            android:text="@string/monthLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/monthPlantedLayout"
            android:layout_width="306dp"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:expandedHintEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/monthPlantedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monthPlantedLabel"
                android:inputType="text|textCapCharacters"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/registerPlantButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registerPlantButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purpleButtonsColor"
                android:text="@string/registerCategoryLabel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="start"
                app:iconSize="24dp"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/returnPlantsButton"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/brownTitleColor"
        android:contentDescription="@string/returnRegisterLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPlantFormLayout"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>