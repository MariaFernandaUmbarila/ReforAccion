<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    app:layout_constraintCircleRadius="40dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/areaRegisterText"
        android:layout_width="354dp"
        android:layout_height="45dp"
        android:layout_margin="7dp"
        android:layout_marginTop="16dp"
        android:text="@string/areaRegisterLabel"
        android:textAlignment="center"
        android:textColor="@color/darkBlueTextColor"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="334dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="@string/titleLabel"
        android:textAlignment="center"
        android:textColor="@color/brownTitleColor"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

    <LinearLayout
        android:id="@+id/registerAreaFormLayout"
        android:layout_width="339dp"
        android:layout_height="393dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/form_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/inputZoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="17dp"
            android:text="@string/inputZoneLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/zonePlantedLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/zonePlantedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/inputZoneLabel"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/areaPlantedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="17dp"
            android:text="@string/areaPlantedLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/areaPlantedLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:expandedHintEnabled="false"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/areaPlantedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/areaPlantedLabel"
                android:inputType="number|numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/monthAreaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="17dp"
            android:text="@string/monthLabel"
            android:textAlignment="viewStart"
            android:textColor="@color/darkGreenTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/monthAreaLayout"
            android:layout_width="306dp"
            android:layout_height="75dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:textAlignment="center"
            app:boxBackgroundColor="@color/inputBoxColor"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/mediumGreenColor"
            app:boxStrokeWidth="2dp"
            app:cursorColor="@color/darkGreenTextColor"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/monthAreaInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/monthPlantedLabel"
                android:inputType="datetime|date"
                android:textAlignment="center"
                android:textColor="@color/darkGreenTextColor"
                android:textColorHint="@color/darkGreenTextColor"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/registerAreaButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registerAreaButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purpleButtonsColor"
                android:text="@string/registerCategoryLabel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/returnAreaButton"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/brownTitleColor"
        android:contentDescription="@string/returnRegisterLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerAreaFormLayout"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>